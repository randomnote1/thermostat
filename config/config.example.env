# Temperature Settings
TARGET_TEMP_HEAT=68.0
TARGET_TEMP_COOL=74.0
HYSTERESIS=0.5

# Sensor Configuration
SENSOR_READ_INTERVAL=30
SENSOR_ANOMALY_THRESHOLD=3.0
SENSOR_DEVIATION_THRESHOLD=5.0
SENSOR_IGNORE_DURATION=3600

# Room/Sensor Mapping (Replace with your actual sensor IDs)
# Find these by running: ls /sys/bus/w1/devices/
SENSOR_LIVING_ROOM=28-0000000001
SENSOR_KITCHEN=28-0000000002
SENSOR_BEDROOM_1=28-0000000003
SENSOR_BEDROOM_2=28-0000000004
SENSOR_BASEMENT=28-0000000005
SENSOR_FIREPLACE_ROOM=28-0000000006

# Sensors to monitor for anomalies (comma-separated, near fireplace)
MONITORED_SENSORS=SENSOR_FIREPLACE_ROOM

# HVAC Settings
HVAC_MIN_RUN_TIME=300
HVAC_MIN_REST_TIME=300
HVAC_MODE=heat

# GPIO Pin Assignments (BCM numbering)
GPIO_RELAY_HEAT=17
GPIO_RELAY_COOL=27
GPIO_RELAY_FAN=22
GPIO_RELAY_HEAT2=23

# Display Settings
DISPLAY_UPDATE_INTERVAL=60
DISPLAY_TYPE=waveshare_2in13_v2

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/thermostat.log

# Web Interface (Optional - for monitoring without display)
WEB_INTERFACE_ENABLED=true
WEB_PORT=5000

# Database & History
DATABASE_PATH=thermostat.db
HISTORY_LOG_INTERVAL=300  # Seconds between history logs (5 minutes)

# Schedule Control
SCHEDULE_ENABLED=true  # Enable automatic schedule execution
SCHEDULE_HOLD_HOURS=2  # Hours to hold manual changes before resuming schedules (0 = no hold)
